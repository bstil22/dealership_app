<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Condition</th>
      <th>Availability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= number_to_currency(vehicle.price_in_dollars) %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.condition.humanize %></td>
        <td>
          <%= vehicle.on_hold ? "On Hold" : "Available" %>
        </td>
        <td><%= link_to 'Show', vehicle %></td>
        <% if policy(@vehicles).update? %>
          <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <% end %>
        <% if policy(@vehicles).update? %>
          <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(@vehicles).create? %>
  <%= link_to 'New Vehicle', new_vehicle_path %>
<% end %>
