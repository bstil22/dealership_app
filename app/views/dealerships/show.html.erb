<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @dealership.name %>
</p>

<p>
  <strong>Vehicles:</strong>
</p>

<table>
  <thead>
    <tr>
      <th>Vehicle name</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @dealership.vehicles.each do |vehicle| %>
      <tr>
        <td><%= link_to vehicle.display_name, vehicle %></td>
        <% if vehicle.on_hold %>
          <td>On Hold</td>
        <% else %>
          <td>Available</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_dealership_path(@dealership) %> |
<%= link_to 'Back', dealerships_path %>
